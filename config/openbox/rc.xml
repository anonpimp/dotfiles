<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>
  <focus>
    <focusNew>yes</focusNew>
    <followMouse>yes</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
    <focusDelay>10</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <placement>
    <policy>Smart</policy>
    <center>yes</center>
    <monitor>Mouse</monitor>
    <primaryMonitor>1</primaryMonitor>
  </placement>
  <theme>
    <name>fuji</name>
    <titleLayout>LIMC</titleLayout>
    <!--
      available characters are NDSLIMC, each can occur at most once.
      N: window icon
      L: window label (AKA title).
      I: iconify
      M: maximize
      C: close
      S: shade (roll up/down)
      D: omnipresent (on all desktops).
  -->
    <keepBorder>yes</keepBorder>
    <animateIconify>yes</animateIconify>
    <font place="ActiveWindow">
      <name>SF Mono</name>
      <size>11</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>SF Mono</name>
      <size>11</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuHeader">
      <name>SF Mono</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuItem">
      <name>SF Mono</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>SF Mono</name>
      <size>10</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>SF Mono</name>
      <size>10</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <cornerRadius>12</cornerRadius>
    <cornerRadius menu="yes">8</cornerRadius>
  </theme>
  <desktops>
    <number>6</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
      <name>4</name>
      <name>5</name>
      <name>6</name>
    </names>
    <popupTime>0</popupTime>
  </desktops>
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>0</x>
      <y>0</y>
    </popupFixedPosition>
  </resize>
  <margins>
    <top>35</top>
    <bottom>35</bottom>
    <left>35</left>
    <right>35</right>
  </margins>
  <keyboard>
    <!-- Keybindings for desktop switching -->
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop">
        <to>5</to>
      </action>
    </keybind>
    <keybind key="W-6">
      <action name="GoToDesktop">
        <to>6</to>
      </action>
    </keybind>
    <keybind key="W-C-1">
      <action name="SendToDesktop">
        <to>1</to>
        <wrap>no</wrap>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-C-2">
      <action name="SendToDesktop">
        <to>2</to>
        <wrap>no</wrap>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-C-3">
      <action name="SendToDesktop">
        <to>3</to>
        <wrap>no</wrap>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-C-4">
      <action name="SendToDesktop">
        <to>4</to>
        <wrap>no</wrap>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-C-5">
      <action name="SendToDesktop">
        <to>5</to>
        <wrap>no</wrap>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-C-6">
      <action name="SendToDesktop">
        <to>6</to>
        <wrap>no</wrap>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-S-1">
      <action name="SendToDesktop">
        <to>1</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop">
        <to>2</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop">
        <to>3</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop">
        <to>4</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-S-5">
      <action name="SendToDesktop">
        <to>5</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-S-6">
      <action name="SendToDesktop">
        <to>6</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Custom keybindings -->
    <keybind key="W-S-r">
      <action name="Reconfigure"/>
      <action name="Execute">
        <command>dunstify -u low "Openbox" "reconfigured"</command>
      </action>
    </keybind>
    <keybind key="W-bracketright">
      <action name="Execute">
        <command>~/.config/dunst/reload</command>
      </action>
    </keybind>
    <keybind key="W-h">
      <action name="Execute">
        <command>hidebar</command>
      </action>
    </keybind>
     <keybind key="W-m">
      <action name="Execute">
        <command>menu</command>
      </action>
    </keybind>
     <keybind key="W-n">
      <action name="Execute">
        <command>notifications</command>
      </action>
    </keybind>
     <keybind key="W-b">
      <action name="Execute">
        <command>eww open --toggle dash</command>
      </action>
    </keybind>
    <keybind key="W-e">
      <action name="Execute">
        <command>eww open --toggle powermenu</command>
      </action>
    </keybind>
    <keybind key="Print">
      <action name="Execute">
        <command>dripshot --full</command>
      </action>
    </keybind>
    <keybind key="W-Print">
      <action name="Execute">
        <command>dripshot --crop</command>
      </action>
    </keybind>
    <keybind key="W-Return">
      <action name="Execute">
        <command>alacritty</command>
      </action>
    </keybind>
    <keybind key="W-S-Return">
      <action name="Execute">
        <command>alacritty -T floatty</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>volume --toggle</command>
      </action>
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>volume --up</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>volume --down</command>
      </action>
    </keybind>
    <keybind key="XF86AudioPrev">
      <action name="Execute">
        <command>playerctl previous</command>
      </action>
    </keybind>
    <keybind key="XF86AudioPlay">
      <action name="Execute">
        <command>playerctl play-pause</command>
      </action>
    </keybind>
    <keybind key="XF86AudioNext">
      <action name="Execute">
        <command>playerctl next</command>
      </action>
    </keybind>
    <keybind key="W-S-p">
      <action name="Execute">
        <command>colorpicker</command>
      </action>
    </keybind>
    <keybind key="A-Tab">
      <action name="ShowMenu">
        <bar>no</bar>
        <menu>client-list-combined-menu</menu>
        <position>
          <x>center</x>
          <y>center</y>
        </position>
      </action>
    </keybind>
    <!-- Keybindings for windows -->
    <keybind key="W-q">
      <action name="Close"/>
    </keybind>
    <keybind key="W-space">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="W-f">
      <action name="ToggleFullscreen"/>
    </keybind>
    <keybind key="W-c">
      <action name="MoveToCenter"/>
    </keybind>
    <keybind key="W-S-Right">
      <action name="UnmaximizeFull"/>
      <action name="MaximizeVert"/>
      <action name="MoveResizeTo">
        <width>49%</width>
      </action>
      <action name="MoveToEdgeEast"/>
    </keybind>
    <keybind key="W-S-Left">
      <action name="UnmaximizeFull"/>
      <action name="MaximizeVert"/>
      <action name="MoveResizeTo">
        <width>49%</width>
      </action>
      <action name="MoveToEdgeWest"/>
    </keybind>
    <keybind key="W-S-Up">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <height>49%</height>
      </action>
      <action name="MoveToEdgeNorth"/>
    </keybind>
    <keybind key="W-S-Down">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <height>49%</height>
      </action>
      <action name="MoveToEdgeSouth"/>
    </keybind>
    <!-- Keybindings for window switching -->
    <keybind key="W-Tab">
      <action name="NextWindow">
        <bar>no</bar>
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="W-Right">
      <action name="DirectionalCycleWindows">
        <direction>right</direction>
        <raise>yes</raise>
        <dialog>none</dialog>
      </action>
    </keybind>
    <keybind key="W-Left">
      <action name="DirectionalCycleWindows">
        <direction>left</direction>
        <raise>yes</raise>
        <dialog>none</dialog>
      </action>
    </keybind>
    <keybind key="W-Up">
      <action name="DirectionalCycleWindows">
        <direction>up</direction>
        <raise>yes</raise>
        <dialog>none</dialog>
      </action>
    </keybind>
    <keybind key="W-Down">
      <action name="DirectionalCycleWindows">
        <direction>down</direction>
        <raise>yes</raise>
        <dialog>none</dialog>
      </action>
    </keybind>
    <keybind key="W-S-t">
      <action name="ToggleLayout"/>
    </keybind>
  </keyboard>
  <mouse>
    <dragThreshold>1</dragThreshold>
    <doubleClickTime>500</doubleClickTime>
    <screenEdgeWarpTime>400</screenEdgeWarpTime>
    <screenEdgeWarpMouse>false</screenEdgeWarpMouse>
    <context name="Frame">
      <mousebind button="W-Left" action="Drag">
        <action name="Move"/>
      </mousebind>
      <mousebind button="W-Right" action="Drag">
        <action name="Resize"/>
      </mousebind>
      <mousebind button="W-Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="W-Left" action="Click">
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="W-Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="W-Right" action="Drag">
        <action name="Resize"/>
      </mousebind>
    </context>
    <context name="Titlebar">
      <mousebind button="Left" action="Drag">
        <action name="Move"/>
      </mousebind>
      <mousebind button="Left" action="DoubleClick">
        <action name="ToggleMaximize"/>
      </mousebind>
    </context>
    <context name="Titlebar Top Right Bottom Left TLCorner TRCorner BRCorner BLCorner">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="ShowMenu">
          <menu>client-menu</menu>
        </action>
      </mousebind>
    </context>
    <context name="TRCorner BRCorner TLCorner BLCorner">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="Left" action="Drag">
        <action name="Resize"/>
      </mousebind>
    </context>
    <context name="Client">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>
    <context name="AllDesktops">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="Left" action="Click">
        <action name="ToggleOmnipresent"/>
      </mousebind>
    </context>
    <context name="Shade">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Left" action="Click">
        <action name="ToggleShade"/>
      </mousebind>
    </context>
    <context name="Iconify">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Left" action="Click">
        <action name="Iconify"/>
      </mousebind>
    </context>
    <context name="Maximize">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="Left" action="Click">
        <action name="ToggleMaximize"/>
      </mousebind>
    </context>
    <context name="Close">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="Left" action="Click">
        <action name="Close"/>
      </mousebind>
    </context>
    <context name="Desktop">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>
    <context name="Root">
      <mousebind button="Middle" action="Press">
        <action name="ShowMenu">
          <menu>client-list-menu</menu>
        </action>
      </mousebind>
    </context>
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="Execute">
          <command>jgmenu_run</command>
        </action>
      </mousebind>
    </context>
  </mouse>
  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>yes</middle>
    <submenuShowDelay>100</submenuShowDelay>
    <submenuHideDelay>400</submenuHideDelay>
    <showIcons>yes</showIcons>
    <manageDesktops>yes</manageDesktops>
  </menu>
  <applications>
    <application class="*">
      <position>
        <x>center</x>
        <y>center</y>
        <focus>yes</focus>
      </position>
    </application>
    <application class="Alacritty">
      <maximized>yes</maximized>
      <decor>yes</decor>
    </application>
    <application title="floatty">
      <maximized>no</maximized>
      <decor>yes</decor>
    </application>
    <application class="Brave-browser">
      <maximized>yes</maximized>
      <desktop>2</desktop>
      <decor>yes</decor>
    </application>
    <application class="Spotify">
      <maximized>yes</maximized>
      <desktop>3</desktop>
      <decor>yes</decor>
    </application>
    <application class="KotatogramDesktop">
      <maximized>yes</maximized>
      <desktop>4</desktop>
      <decor>yes</decor>
    </application>
    <application class="discord">
      <maximized>yes</maximized>
      <desktop>5</desktop>
      <decor>yes</decor>
    </application>
    <application class="mpv">
      <maximized>yes</maximized>
      <desktop>6</desktop>
      <decor>no</decor>
    </application>
    <application type="dialog">
      <maximized>no</maximized>
      <decor>no</decor>
    </application>
  </applications>
  <dock>
    <position>Bottom</position>
    <floatingX>0</floatingX>
    <floatingY>0</floatingY>
    <stacking>Above</stacking>
    <direction>Horizontal</direction>
    <noStrut>no</noStrut>
    <autoHide>no</autoHide>
    <hideDelay>300</hideDelay>
    <showDelay>300</showDelay>
  </dock>
</openbox_config>
